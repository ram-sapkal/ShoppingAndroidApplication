<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deactivate Account"
                android:textColor="#0327ED"
                android:textSize="26dp"
                android:fontFamily="@font/acme"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Come back anytime, we are here for you!"
                android:textColor="@color/black"
                android:textSize="12dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/barlogo"
            android:layout_marginRight="12dp"/>
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Warning: Once you deactivate your account, all your data has been cleared at that moment. Cleared data can not be recovered at any cost. "
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textSize="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/black"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:padding="6dp"

        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="12dp"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:boxCollapsedPaddingTop="7dp"
        app:boxStrokeColor="#0327ED"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextColor="#0327ED"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:prefixText="+91"
        app:startIconDrawable="@drawable/ic_outline_phone_24"
        app:startIconTint="#0327ED">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number "
            android:inputType="textPersonName|phone" />
    </com.google.android.material.textfield.TextInputLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/deAnimation"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="220dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="5dp"
            app:lottie_fileName="deactivate.json"/>

        <TextView
            android:id="@+id/aniText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your account has been deactivated successfully!"
            android:textColor="#0327ED"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:textSize="14dp"
            />


        <Button
            android:id="@+id/deactivate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Deactivate"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:backgroundTint="#0327ED"
            />





    </LinearLayout>




</LinearLayout>
